<!-- Templates Start -->
	<Button name="ToolbarButtonTemplate" virtual="true" enableMouse="true">
		<Size>
			<AbsDimension x="26" y="26" />
		</Size>
		<Backdrop edgeFile="Interface\AddOns\MarkBar\tex\border.tga" tile="false">
			<EdgeSize>
				<AbsValue val="10" />
			</EdgeSize>
		</Backdrop>
		<Scripts>
			<OnLoad>
				MarkBar.MarkOnLoad(self);
			</OnLoad>
			<OnEvent>
				MarkBar.OnEvent(self, event, ...);
			</OnEvent>
			<OnClick>
				MarkBar.MarkOnClick(self, button);
			</OnClick>
			<OnEnter>
				MarkBar.MarkMouseIn(self);
			</OnEnter>
			<OnLeave>
				MarkBar.MarkMouseOut(self);
			</OnLeave>
		</Scripts>
	</Button>
<!-- Templates End -->

