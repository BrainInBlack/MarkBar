			<OnMouseDown>
				MarkBar.MoveOnDown(self, button);
			</OnMouseDown>
			<OnMouseUp>
				MarkBar.MoveOnUp(self, button);
			</OnMouseUp>
			<OnUpdate>
				if(MarkBar.PermaMarksRun)then
					MarkBar.OnUpdate(elapsed);
				end
			</OnUpdate>
			<OnEnter>
				MarkBar.ToolbarMouseIn(self);
			</OnEnter>
			<OnLeave>
				MarkBar.ToolbarMouseOut(self);
			</OnLeave>
		</Scripts>
